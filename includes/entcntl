! $Header: m:/default/includes/RCS/entcntl,v 1.14 2017/09/15 18:47:55 LC2 Exp $
!CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC
!  ENTCNTL CONTAINS INPUT DATA FOR THE NEW TECHNOLOGIES SUBMODULE THAT
!  WILL BE USED TO CALCULATE TECHNOLOGICAL OPTIMISM AND LEARNING EFFECTS.
!  THE CALCULATED LEARNING EFFECTS ARE IN ENEWTECH COMMON FILE          .
!CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC
      COMMON /ENT$CNTL/  UPLROP0, UPLRLCR, UPLRSIZ, UPLRMIN, UPLRMAX, & ! REAL
       UPLRPC,  UPANNADJ, UPLRLCI, UPLRDBL, UPISHR, UPMNLRN, UPMSSIZ,   &
       UPLRSYR, UPLRLYR, UPLROPS, UPLROPE, UPLRLCU, UPLRLCX,  & ! INTEGERS
       UPLCSTWT, UPLCAPWT,UPLCAPWT_INT, UPANNLMT,             & ! REAL
       UPDHRSW, UPDHRY0, UPDHRYN                                ! INTEGERS
!
      INTEGER ECP$LRN                    ! NUMBER OF STEPS IN LEARNING CURVE
      PARAMETER (ECP$LRN = 3)
      INTEGER ECP$COMP                   ! NUMBER OF PLANT COMPONENTS FOR LEARNING
      PARAMETER (ECP$COMP = 29)          ! add one for offshore wind and one for P2, and storage
      INTEGER ECP$LVN
      PARAMETER (ECP$LVN = 3)
      INTEGER ESIZ$ENT
      PARAMETER( ESIZ$ENT = (( 11 * 4 * ECP_D_CAP) + &
                             ( 2 * 4 * ECP_D_CAP * ECP$LRN) + &
                             ( 2 * 4 * ECP_D_CAP * MNUMYR) + &
                             (3 * 4 * ECP_D_DSP)) )
!
!     ENT$CNTL - VARIABLE DECLARATION AND DEFINITIONS
!
!     ALL ECP PLANT TYPES
!
      REAL*4    UPMSSIZ(ECP_D_CAP)         ! TYPICAL UNIT SIZE - MKT SHR
      REAL*4    UPLRMIN(ECP_D_CAP)         ! MIN FRAC UNIT SIZE--MKT SHR
      REAL*4    UPLRMAX(ECP$LVN)         ! MAX LRN RATE FOR ALL COMPONENTS, by LEARNING "VINTAGE"
      REAL*4    UPLRPC(ECP_D_CAP)          ! PROJECT CONTINGENCY FACTOR
      REAL*4    UPANNADJ(ECP_D_CAP,MNUMYR) ! ANNUAL ADJUSTMENT   FACTOR
      REAL*4    UPLRLCI(ECP_D_CAP,MNUMYR)  ! INT. CAP. BY YEAR FOR LEARNING
      REAL*4    UPISHR(ECP_D_CAP)          ! SHARE OF INTERNATIONAL CAPACITY TO
                                         ! APPLY TO LEARNING (0.0 < UPLRISHR <= 1.0)
      INTEGER*4 UPLRSYR(ECP_D_CAP)         ! Start Calendar Year For Accumulating Cap
      INTEGER*4 UPLRLYR(ECP_D_CAP)         ! Last Calendar Year For Accumulating Cap
!
!     ALL ECP PLANT COMPONENTS
      REAL*4    UPLROP0(ECP$COMP)         ! INITIAL OPTIMISM FACTOR
      REAL*4    UPLRSIZ(ECP$COMP)         ! TYPICAL UNIT SIZE
      REAL*4    UPLRLCR(ECP$COMP,ECP$LRN) ! LEARNING RATES FOR EACH STEP
      REAL*4    UPLRDBL(ECP$COMP)         ! LIMIT ON AMOUNT OF DOUBLINGS OF
                                         ! OF CAPACITY ALLOWERD IN A SINGLE YEAR
      REAL*4    UPMNLRN(ECP$COMP)         ! MINIMUM DECREASE IN LEARNING FACTOR
                                         ! OVER FORECAST PERIOD
      INTEGER*4 UPLROPS(ECP$COMP)         ! UNIT # to start decrease in Tech Optimism
      INTEGER*4 UPLROPE(ECP$COMP)         ! UNIT # to end decrease in Tech Optimism
      INTEGER*4 UPLRLCU(ECP$COMP,ECP$LRN) ! UNIT # to end learning steps
      INTEGER*4 UPLRLCX(ECP$COMP)         ! INDEX FOR EXISTING TECH. FOR LEARNING
!
!     WEIGHTS TO MAP ECP PLANT TYPES TO COMPONENTS
      REAL*4    UPLCSTWT(ECP_D_CAP,ECP$COMP)  ! cost weight
      REAL*4    UPLCAPWT(ECP_D_CAP,ECP$COMP)  ! capacity weight
      REAL*4    UPLCAPWT_INT(ECP_D_CAP,ECP$COMP)  ! capacity weight for international
!
!     HEAT RATE LEARNING FOR DISPATCHABLE NON-RENEWABLE ECP TECHNOLOGIES
!
      INTEGER*4 UPDHRSW(ECP_D_DSP)         ! User Switch -- Learning for Heat Rates
      INTEGER*4 UPDHRY0(ECP_D_DSP)         ! Start Year  -- Learning for Heat Rates
      INTEGER*4 UPDHRYN(ECP_D_DSP)         ! End Year    -- Learning for Heat Rates
!
!     ANNUAL NATIONAL BUILD LIMIT BOUNDS ADDED FOR SPECIAL STUDIES        
!
      REAL*4    UPANNLMT(ECP_D_CAP,MNUMYR)  ! ANNUAL NATAIONAL BUILD LIMIS (GW)
