! $Header: m:/default/includes/RCS/emoblk,v 1.8 2011/08/03 15:58:40 pkc Exp $

      INTEGER DBUGEPM      ! DEBUG SWITCH FOR THE EPM
      INTEGER NOMINAL_FLAG ! NOMINAL OR 87 DOLLARS
! INTEGERS DETERMINE WHICH TYPE OF POLICY IS TO BE USED (1=TRUE 0=FALSE)
      INTEGER TAX_FLAG     !  TAX ONLY
      INTEGER PERMIT_FLAG  ! AUCTION FOR PERMITS
      INTEGER MARKET_FLAG  ! FULL MARKET FOR PERMITS
      INTEGER OFFSET_FLAG  ! MARKET FOR PERMITS WITH OFFSETS
      INTEGER ETAX_FLAG    ! ENERGY TAX ONLY
      INTEGER TRAN_FLAG    ! Cap/Fee applies to Tran Only
      INTEGER ELEC_FLAG    ! Cap Applies to Elec Only
      INTEGER RESD_FLAG    ! Cap/fee excludes RESiDential 
      INTEGER COMM_FLAG    ! Cap/fee excludes COMMercial
      INTEGER BANK_FLAG    ! Escalated Fee with banking to meet cap over long period. (see include epmbank) 

      REAL*4 EMTAX(MNUMYR),           & ! TAX OR PRICE OF PERMIT
             TOTAL_EMISSIONS(MNUMYR), & ! COUNTRY EMISSIONS BY YR
             EMISSIONS_GOAL(MNUMYR),  & ! GOAL BY YEAR
             MAX_TAX(MNUMYR),         & ! MAX PENALTY IN ANY YEAR
             MIN_TAX(MNUMYR),         & ! MIN PENALTY IN ANY YEAR
             INIT_ALLOC(5,MNUMYR)       ! INITIAL PERMIT ALLOCATION

      INTEGER CL_CDNUM(9)   ! NUMBER OF COAL REGIONS FOR EACH CENSUS DIVISION
      INTEGER CL_CDMAP(9,5) ! MAPPING OF COAL REGIONS TO CENSUS DIVISION

      COMMON/EMOBLK/ EMTAX,TOTAL_EMISSIONS,EMISSIONS_GOAL,MAX_TAX,MIN_TAX, &
        INIT_ALLOC,DBUGEPM,CL_CDNUM,CL_CDMAP,TAX_FLAG, &
        MARKET_FLAG,PERMIT_FLAG,OFFSET_FLAG,ETAX_FLAG,TRAN_FLAG, &
        NOMINAL_FLAG,ELEC_FLAG,RESD_FLAG,COMM_FLAG,BANK_FLAG

! EQUIVALENCE FOR FILER USED FOR DATA STORAGE
      REAL EQ_EMOBLK(5*MNUMYR +         &    ! EMTAX, TOTAL_EMISSIONS, EMISSIONS_GOAL, MAX_TAX, MIN_TAX
           5*MNUMYR + 1 + 9 + 9*5 + 1 + &    ! INIT_ALLOC, DBUGEPM, CL_CDNUM, CL_CDMAP, TAX_FLAG
           10 +                         &    ! 10 Logical Integers: MARKET_FLAG, PERMIT_FLAG, OFFSET_FLAG, ETAX_FLAG, TRAN_FLAG, NOMINAL_FLAG, ELEC_FLAG, RESD_FLAG, COMM_FLAG, BANK_FLAG
           0)                                ! the end

      EQUIVALENCE (EQ_EMOBLK,EMTAX)
