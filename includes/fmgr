!  $Header: m:/default/includes/RCS/fmgr,v 1.6 2012/07/13 21:27:17 pkc Exp $
! *******************************************************************
! *                                                                 *
! * INCLUDE/COMMON FOR FILE_MGR ROUTINE                             *
! *                                                                 *
! *******************************************************************

!.....DECLARATIONS FOR PARAMETERS
      INTEGER*4   MAX_FILES       !MAX # OF FILES IN FILELIST FILE
      INTEGER*4   MIN_UNIT        !MIN UNIT # FOR FILE I/O
      INTEGER*4   MAX_UNIT        !MAX UNIT # FOR FILE I
      LOGICAL     MSG_FLAG        !FLAG IF MESSAGE IS OF MESSAGE TYPE
      LOGICAL     ERR_FLAG        !FLAG IF MESSAGE IS OF ERROR TYPE
      INTEGER*4   ERR_UNIT        !ERROR UNIT NUMBER TO WRITE TO
      INTEGER*4   MSG_UNIT        !MESSAGE UNIT NUMBER TO WRITE TO

!.....PARAMETER VALUES
      PARAMETER(MAX_FILES=500)
      PARAMETER(MIN_UNIT=25)
      PARAMETER(MAX_UNIT=500)
      PARAMETER(ERR_FLAG=.TRUE.)
      PARAMETER(MSG_FLAG=.FALSE.)
      PARAMETER(ERR_UNIT=6)
      PARAMETER(MSG_UNIT=10)

!.....BEGIN OF COMMON BLOCK VARIABLES
!.....FOLLOWING VARIABLES ARE IN FILE_MGR DATA FILE
      CHARACTER*18 F_ID(MAX_FILES)
      CHARACTER*93 F_NAME(MAX_FILES)
      CHARACTER*9  F_IOTYPE(MAX_FILES)
      CHARACTER*7  F_STATUS(MAX_FILES)
      CHARACTER*10 F_ACCESS(MAX_FILES)
      CHARACTER*11 F_FORM(MAX_FILES)
      INTEGER*4    F_LRECL(MAX_FILES)
      CHARACTER*8  CHAR_LRECL
      CHARACTER*60 F_DESCRIPTION(MAX_FILES)

!.....FOLLOWING VARIABLES ARE INITIALIZED UPON READING FILE_MGR DATA FILE
      INTEGER*4    F_UNIT(MAX_FILES)         !UNIT NUMBER
      CHARACTER*6  F_IOSTATUS(MAX_FILES)     !CURRENT STATUS
      CHARACTER*10 F_PDS_NAME(MAX_FILES)     !MEMBER NAME FOR PDS
      LOGICAL      F_PDS_FLAG(MAX_FILES)     !FLAG IF PDS

      INTEGER*4    F_ELEMENTS               !NUMBER OF ELEMENTS IN ARRAYS
      LOGICAL      UNIT_AVAIL(MAX_UNIT)     !FLAG IF UNIT # IS AVAILABLE
!.....END OF COMMON BLOCK VARIABLES

      CHARACTER*165 MSG_STRING              !GLOBAL MESSAGE STRING ERROR/INFO.
      LOGICAL       MSG_TYPE                !GLOBAL MESSAGE TYPE ERROR=.T.
                                            !                    MESSAGE=.F.

!     FILEMGR COMMON BLOCK
      COMMON/FMGR1/ F_ID, F_NAME, F_IOTYPE, F_STATUS, F_ACCESS, F_FORM, F_LRECL

      COMMON/FMGR2/F_DESCRIPTION

      COMMON/FMGR3/ F_UNIT, F_IOSTATUS, F_PDS_FLAG, F_PDS_NAME, F_ELEMENTS

      COMMON/UNITAVAIL/UNIT_AVAIL
